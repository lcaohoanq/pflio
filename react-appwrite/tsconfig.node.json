// this tsconfig is for the vite config file only

// ******* DO NOT USE THIS WHEN DEVELOPMENT, this is for the vite server *********
{
  "schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src/**/*", "vite.config.js"]
}

